{
  "name": "ai-task-manager",
  "version": "1.0.0",
  "type": "module",
  "description": "AI-powered task management API with natural language processing",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "vercel dev",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/ --config eslint.config.js --ext .js",
    "lint:fix": "eslint src/ --config eslint.config.js --ext .js --fix",
    "docs": "jsdoc -c jsdoc.json",
    "docker:build": "docker build -t ai-taskpilot-api .",
    "docker:run": "docker run -p 3000:3000 ai-task-manager"
  },
  "keywords": [
    "ai",
    "task-management",
    "gemini",
    "firebase",
    "api",
    "nodejs",
    "express"
  ],
  "author": "Muneeb Ur Rehman",
  "license": "MIT",
  "dependencies": {
    "@google/generative-ai": "^0.21.0",
    "compression": "^1.8.0",
    "cors": "^2.8.5",
    "express": "^4.21.1",
    "express-rate-limit": "^7.4.1",
    "express-validator": "^7.2.0",
    "firebase-admin": "^12.6.0",
    "helmet": "^8.0.0",
    "jsonwebtoken": "^9.0.2",
    "winston": "^3.15.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.0",
    "babel-jest": "^30.0.4",
    "eslint": "^9.31.0",
    "jest": "^30.0.4",
    "jsdoc": "^4.0.4",
    "nodemon": "^3.1.7",
    "supertest": "^7.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/config/**",
      "!src/utils/logger.js"
    ],
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "testMatch": [
      "**/test/**/*.test.js"
    ]
  },
  "nodemonConfig": {
    "watch": [
      "src/"
    ],
    "ext": "js",
    "ignore": [
      "tests/",
      "logs/",
      "node_modules/"
    ]
  }
}
